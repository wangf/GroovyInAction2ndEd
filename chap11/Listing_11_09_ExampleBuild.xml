<project name="prepareBookDirs" default="copy">

  <property name="target.dir"   value="target"/>  
  <property name="chapters.dir" value="chapters"/>
  
  <target name="copy">
    <delete dir="${target.dir}" />
    <copy todir="${target.dir}">
      <fileset dir="${chapters.dir}" 
        includes="*.doc" 
        excludes="~*"   />
    </copy>
  </target>
</project>
